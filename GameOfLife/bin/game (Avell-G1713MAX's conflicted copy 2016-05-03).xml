<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!-- Engine -->
	<bean id="engine" class="br.unb.cic.poo.model.GameEngine" scope="prototype">
		<!-- Constructor injection -->
		<constructor-arg index="0" value="10"/>
		<constructor-arg index="1" value="10"/>
		<constructor-arg index="2" ref="statistics"/>
		
		<!-- Object injection -->
		<property name="strategy" ref="conway"/>
	</bean>
	
	<!-- Statistics -->
	<bean id="statistics" class="br.unb.cic.poo.game.Statistics" scope="prototype"/>
	
	<!-- Rules -->
	<bean id="anneal" class="br.unb.cic.poo.engine.Anneal" scope="prototype"/>
	<bean id="conway" class="br.unb.cic.poo.engine.Conway" scope="prototype"/>
	<bean id="dayandnight" class="br.unb.cic.poo.engine.DayAndNight" scope="prototype"/>
	<bean id="highlife" class="br.unb.cic.poo.engine.HighLife" scope="prototype"/>
	<bean id="lifewithoutdeath" class="br.unb.cic.poo.engine.LifeWithoutDeath" scope="prototype"/>
	<bean id="morley" class="br.unb.cic.poo.engine.Morley" scope="prototype"/>
	<bean id="replicator" class="br.unb.cic.poo.engine.Replicator" scope="prototype"/>
	<bean id="seeds" class="br.unb.cic.poo.engine.Seeds" scope="prototype"/>

</beans>